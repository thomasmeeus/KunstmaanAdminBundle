<div class="permissionscontainer">
{% spaceless %}
    <table class="table table-bordered table-striped">
        <thead>
           <tr>
               <th>Rollname</th>
                {% for permissionName in permissionadmin.getPossiblePermissions() %}
                    <th>{{ permissionName }}</th>
                {% endfor %}
           </tr>
        </thead>
        <tbody>
            {% for role in permissionadmin.getAllRoles() %}
	            <tr>
	                <td>
	                    {{ role.getRole() }}
	                </td>
	                {% set permission = permissionadmin.getPermission(role) %}
	                {% for permissionName in permissionadmin.getPossiblePermissions() %}
		                <td>
		                    <input type="checkbox" name="permissions[{{ role.getRole() }}][{{ permissionName }}]" {% if permission is not null and permission.has(permissionName) %}checked="checked"{% endif %} />
		                </td>
	                {% endfor %}
	            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endspaceless %}
</div>